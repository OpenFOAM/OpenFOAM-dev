{
    nNonOrthogonalCorrectors 10;
}

relaxationFactors
{
    fields
    {
        p_rgh           0.7;
    }
    equations
    {
        U               0.3;
        e               0.5;
        "(k|omega|epsilon)" 0.7;
    }
