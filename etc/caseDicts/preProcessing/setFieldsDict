FoamFile
{
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultValues
{
    alpha.water 0;
    U           (0 0 0);
}

zones
{
    // Setting values inside a box
    box
    {
        type        box;
        zoneType    cell;

        box     (0 0 0) (30 30 30);
        fieldValues
        (
            volScalarFieldValue alpha.water 1
            volVectorFieldValue U (1 0 0)
        );
    }

    // Setting values inside a sphere
    sphere
    {
        type        sphere;
        zoneType    cell;

        centre      (40 40 40);
        radius      10;

        values
        {
            alpha.water 1;
            U           (1 0 0);
        }
    }

    // Setting values inside a surface geometry file
    surface
    {
        type            insideSurface;
        zoneType        cell;

        surface         closedTriSurface;
        file            "geometry.obj";

        values
        {
            alpha.water 1;
            U           (1 0 0);
        }
    }
}

// ************************************************************************* //
