FoamFile
{
    format      ascii;
    class       dictionary;
    object      refineMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

coordinates
{
    type        global;

    e1          (1 0 0);
    e2          (0 1 0);

    directions  (e1 e2 e3);
}

zones
{
    level1
    {
        type    box;
        box     (-10 -6 -3) (10 0 3);
    }

    level2
    {
        type    box;
        box     (-5 -3 -2.5) (10 0 2);
    }
}

