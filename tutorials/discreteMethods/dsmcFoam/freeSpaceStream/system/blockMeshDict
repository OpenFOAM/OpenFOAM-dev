    outlet
    {
        type patch;
        faces
        (
            (1 2 6 5)
        );
    }

    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }

    sides
    {
        type patch;
        faces
        (
            (2 3 7 6)
            (0 1 5 4)
            (4 5 6 7)
            (0 3 2 1)
        );
    }
)

