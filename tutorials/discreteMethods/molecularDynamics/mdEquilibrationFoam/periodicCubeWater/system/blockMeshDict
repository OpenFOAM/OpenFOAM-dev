(
    periodicX_half0
    {
        type cyclic;
        faces ((1 2 6 5));
        neighbourPatch periodicX_half1;
    }

    periodicX_half1
    {
        type cyclic;
        faces ((0 4 7 3));
        neighbourPatch periodicX_half0;
    }

    periodicY_half0
    {
        type cyclic;
        faces ((2 3 7 6));
        neighbourPatch periodicY_half1;
    }

    periodicY_half1
    {
        type cyclic;
        faces ((0 1 5 4));
        neighbourPatch periodicY_half0;
    }

    periodicZ_half0
    {
        type cyclic;
