FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      SurfaceFilmProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFilmModel thermoSingleLayer;

regionName      wallFilmRegion;

viscosity
{
    model        Newtonian;
}

sigma       0.07;

deltaWet    1e-4;

hydrophilic no;

transfer
{
    VoFPatchTransfer
    {
        deltaFactorToVoF  0.2;
        alphaToVoF        0.2;

        deltaFactorToFilm 0;
        alphaToFilm       0;

        transferRateCoeff 0.1;
    }
}

momentumTransport
{
    model       laminar;
    Cf          0.005;
}

forces
{
    thermocapillary;
}

upperSurfaceModels
{
    heatTransfer
    {
        model    constant;
        c0       1e-8;
    }
}

lowerSurfaceModels
{
    heatTransfer
    {
        model   constant;
        c0      1e-8;
    }
}


