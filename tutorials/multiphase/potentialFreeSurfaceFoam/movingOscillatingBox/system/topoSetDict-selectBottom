actions
(
    {
        name    floatingObjectBottom;
        type    faceSet;
        action  new;
        source  patchToFace;
        sourceInfo
        {
            name   floatingObject;
        }
    }

    {
        name    floatingObjectBottom;
        type    faceSet;
        action  subset;
        source  normalToFace;
        sourceInfo
        {
            normal (0 1 0);     // Vector
            cos     0.01;       // Tolerance (max cos of angle)
        }
    }
