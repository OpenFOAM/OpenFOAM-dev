FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type    basicMultiphaseSystem;

phases (particles air);

referencePhase air;

particles
{
    type          purePhaseModel;

    diameterModel constant;
    constantCoeffs
    {
        d               3e-4;
    }

    alphaMax        0.62;
    residualAlpha   1e-6;
}

air
{
    type          purePhaseModel;

    diameterModel none;

    residualAlpha   0;
}

blending
{
    default
    {
        type            continuous;
        phase           air;
    }
}

surfaceTension
{
    air_particles
    {
        type            constant;
        sigma           0;
    }
}

interfaceCompression
{}

drag
{
    particles_dispersedIn_air
    {
        type            GidaspowErgunWenYu;
        residualRe      1e-3;
    }
}

virtualMass
{}

heatTransfer
{
    particles_dispersedIn_air
    {
        type            RanzMarshall;
        residualAlpha   1e-4;
    }
}

phaseTransfer
{}

lift
{}

wallLubrication
{}

turbulentDispersion
{}

