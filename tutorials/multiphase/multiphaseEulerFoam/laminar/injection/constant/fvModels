FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

massSource
{
    type            massSource;

    selectionMode   points;
    points
    (
        (0.075 0.2 0.05)
    );

    volumeMode      absolute;

    phase           air;
    rho             thermo:rho.air;

    massFlowRate
    {
        type            scale;
        scale           squarePulse;
        start           0.1;
        duration        5;
        value           1e-3;
    }

    fieldValues
    {
        U.air       (0 -10 0);
        T.air       300;
    }
}


