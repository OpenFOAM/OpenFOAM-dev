option1
{
    type            verticalDamping;

    selectionMode   all;

    origin          (1200 0 0);
    direction       (1 0 0);
    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    600;
    }

    lambda          0.5;

    timeStart       0;
    duration        1e6;
}


