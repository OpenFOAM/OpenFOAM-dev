FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultValues
{
    alpha.air       1;
    alpha.water     0;
    alpha.oil       0;
    alpha.mercury   0;
}

zones
{
    water
    {
        type        box;
        zoneType    cell;

        box         (0 0 -1) (1 1 1);

        values
        {
            alpha.water     1;
            alpha.oil       0;
            alpha.mercury   0;
            alpha.air       0;
        }
    }

    oil
    {
        type        box;
        zoneType    cell;

        box         (0 -1 -1) (1 0 1);

        values
        {
            alpha.water     0;
            alpha.oil       1;
            alpha.mercury   0;
            alpha.air       0;
        }
    }

    mercury
    {
        type        box;
        zoneType    cell;

        box         (-1 -1 -1) (0 0 1);

        values
        {
            alpha.water     0;
            alpha.oil       0;
            alpha.mercury   1;
            alpha.air       0;
        }
    }
}

// ************************************************************************* //
