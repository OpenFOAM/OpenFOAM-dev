FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

TWind 298.0;
TStack 398.0;

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $TWind;

boundaryField
{
    inletWind
    {
        type            fixedValue;
        value           uniform $TWind;
    }

    inlet
    {
        type            fixedValue;
        value           uniform $TStack;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform $TWind;
        value           $internalField;
    }

    wall
    {
        type            zeroGradient;
    }

    #includeEtc "caseDicts/setConstraintTypes"
}

