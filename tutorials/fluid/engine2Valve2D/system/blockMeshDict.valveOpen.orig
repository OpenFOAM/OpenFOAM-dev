// 4 _  _  5 _ _ _ _ _ _ |13

valveLift -2;
pistonPos -4;

nValve 8;
nPiston 8;
nXLeft 8;

x0 -6;
x1 -4;
x2 -3;
x3 -1;
x4  0;

y0 $valveLift;
y1 $pistonPos;
y2 1;
y3 8;
y4 #calc "$valveLift+1";

z0 0.0;
z1 0.5;

vertices
(
    ($x0 0.0 $z0) //0
    ($x1 0.0 $z0) //1
    ($x0 $y0 $z0) //2
    ($x1 $y0 $z0) //3
    ($x0 $y1 $z0) //4
    ($x1 $y1 $z0) //5
    ($x2 $y3 $z0) //6
    ($x2 $y2 $z0) //7
    ($x2 $y4 $z0) //8
