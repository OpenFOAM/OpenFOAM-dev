FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        nAlphaCorr      1;
        nAlphaSubCycles 3;
    }

    p_rgh
    {
        solver          GAMG;
        smoother        DIC;

        tolerance       1e-8;
        relTol          0.01;
        maxIter         20;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    "U.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;

        tolerance       1e-6;
        relTol          0;
    }

    "(e|h).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;

        tolerance       1e-8;
        relTol          0;
        maxIter         20;
    }

    "(k|epsilon).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;

        tolerance       1e-8;
        relTol          0;
    }

    "Yi.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;

        tolerance       1e-8;
        relTol          0;
    }
}

PIMPLE
{
    nOuterCorrectors    2;
    nCorrectors         2;
    nNonOrthogonalCorrectors 0;
    nEnergyCorrectors   2;

    faceMomentum        no;
    VmDdtCorrection     yes;
    dragCorrection      yes;
    partialElimination  yes;
}

relaxationFactors
{
    fields
    {
        thermalPhaseChange:dmdtf 1;
    }

    equations
    {
        ".*"            1;
    }
}


