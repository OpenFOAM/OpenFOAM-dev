solution
{
    active          true;
    coupled         yes;
    transient       yes;
    cellValueSourceCorrection yes;
    maxCo           0.3;

    sourceTerms
    {
        schemes
        {
            rho             explicit 1;
            U               explicit 1;
            Yi              explicit 1;
            h               explicit 1;
            radiation       explicit 1;
        }
