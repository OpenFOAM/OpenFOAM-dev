(
    // back
    ( 0   0   0)
    ( 1   0   0)
    ( 0  0.5  0)
    ( 1  0.5  0)

    // front
    ( 0   0   1)
    ( 1   0   1)
    ( 0  0.5  1)
    ( 1  0.5  1)
);

blocks
(
    hex (0 1 3 2 4 5 7 6 ) (20 10 20) simpleGrading (1 1 1)
);

