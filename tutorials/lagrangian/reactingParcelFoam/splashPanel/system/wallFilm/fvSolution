FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system/wallFilm";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0;
    }

    "(U|h).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor yes;
    nCorr           1;
    nNonOrthCorr    0;
}

relaxationFactors
{
    equations
    {
        ".*"        1;
    }
}


