(
    hex (0 1 2 3 4 5 6 7) (40 40 30) simpleGrading (1 1 1)
);

boundary
(
    sides
    {
        type patch;
        faces
        (
            (2 6 5 1)
            (1 5 4 0)
            (3 7 6 2)
            (0 4 7 3)
        );
    }

