    {
        type wall;
        faces
        (
            (0 3 2 1)
        );
    }

    atmosphere
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }

    floatingObject
    {
        type wall;
        faces ();
    }

    internal
