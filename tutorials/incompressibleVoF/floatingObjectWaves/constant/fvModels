FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

forcing
{
    type            waveForcing;

    libs            ("libwaves.so");

    liquidPhase     water;

    origins
    (
        (0     0.75  0.5)
        (0     0.25  0.5)
        (0.25  0     0.5)
        (0.75  0     0.5)
    );

    directions
    (
        ( 0  1  0)
        ( 0 -1  0)
        (-1  0  0)
        ( 1  0  0)
    );

    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    0.5;
    }

    lambdaCoeff         5;
    lambdaBoundaryCoeff 25;

    // Write the forcing fields: forcing:scale, forcing:forceCoeff
    writeForceFields true;
}


// ************************************************************************* //
