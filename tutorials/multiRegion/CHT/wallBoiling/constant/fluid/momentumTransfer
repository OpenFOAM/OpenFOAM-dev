FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant/fluid";
    object      momentumTransfer;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

drag
{
    gas_dispersedIn_liquid
    {
        type            IshiiZuber;
    }
}

virtualMass
{
    gas_dispersedIn_liquid
    {
        type            constantCoefficient;
        Cvm             0.5;
    }
}

lift
{
    gas_dispersedIn_liquid
    {
        type            wallDamped;

        lift
        {
            type            Tomiyama;
            Cl              0.288;
            aspectRatio
            {
                type            constant;
                E0              1;
            }
        }

        wallDamping
        {
            type            cosine;
            Cd              1.0;
            zeroWallDist    0.0002;
        }
    }
}

wallLubrication
{
    gas_dispersedIn_liquid
    {
        type            Antal;
        Cw1             -0.01;
        Cw2             0.05;
    }
}

turbulentDispersion
{
    gas_dispersedIn_liquid
    {
        type            LopezDeBertodano;
        Ctd             1.0;
        residualAlpha   1e-3;
    }
}

