FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createZonesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

rotating
{
    type        cylinder;
    zoneType    cell;

    point1      (0 0 -1);
    point2      (0 0 1);
    radius      #calc
        "$<scalar>blockMeshDict!convertToMeters * $<scalar>blockMeshDict!R";
}

