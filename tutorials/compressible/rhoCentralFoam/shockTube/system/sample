FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cellPoint;

setFormat       raw;

sets
(
    line
    {
        type    lineFace;
        axis    x;
        start   (-5 0 0);
        end     (5 0 0);
        nPoints 100;
    }
);

fields          ( p U.component(0) T rho );


