FoamFile
{
    format      ascii;
    class       dictionary;
    object      surfaceFeaturesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaces
(
    "AMI.obj"
    "shaft.obj"
    "wall.obj"
    "statorBlades.obj"
    "rotorBlades.obj"
);

// Identify a feature when angle between faces < includedAngle
includedAngle   150;

trimFeatures
{
    minElem         10;   // minimum edges within a feature
}

writeObj        yes;  // writes out _edgeMesh.obj files to view features

