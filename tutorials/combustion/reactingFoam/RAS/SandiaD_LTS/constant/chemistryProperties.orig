#includeEtc "caseDicts/solvers/chemistry/TDAC/chemistryPropertiesFlame.cfg"

chemistryType
{
    solver            ode;
    method            TDAC;
}

chemistry       on;

initialChemicalTimeStep 1e-7;
//maxChemicalTimeStep 1e-3;

odeCoeffs
{
    solver          seulex;
    absTol          1e-8;
    relTol          1e-1;
}

importantSpecies
{
    CO2;
    H2O;
    CH4;
    O2;
}

reduction
{
    tolerance   1e-4;
}

tabulation
{
    tolerance   3e-3;
}

