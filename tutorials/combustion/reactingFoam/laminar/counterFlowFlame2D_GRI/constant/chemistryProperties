FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      chemistryProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

chemistryType
{
    solver            ode;
}

chemistry       on;

initialChemicalTimeStep 1e-7;
maxChemicalTimeStep     1e-4;

odeCoeffs
{
    solver          seulex;
    absTol          1e-12;
    relTol          1e-1;
}

