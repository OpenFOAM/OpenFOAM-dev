FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/caseSettings"

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform $:internalField.epsilon;

boundaryField
{
    back
    {
        type            wedge;
    }

    front
    {
        $back;
    }

    liner
    {
        $:wall.epsilon;
    }

    cylinderHead
    {
        $liner;
    }

    piston
    {
        $liner;
    }
}


