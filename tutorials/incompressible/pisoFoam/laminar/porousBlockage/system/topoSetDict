FoamFile
{
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    // Create porousBlockage cellSet
    {
        name    porousBlockageCellSet;
        type    cellSet;
        action  new;
        source  boxToCell;
        box (-0.5 -0.5 -1) (0.5 0.5 1);
    }

    // Convert porousBlockage cellSet into a cellZone
    {
        name    porousBlockage;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        set porousBlockageCellSet;
    }
);

// ************************************************************************* //
