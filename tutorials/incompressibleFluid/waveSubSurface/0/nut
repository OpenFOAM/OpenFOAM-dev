FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    bottom
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    "(top|inlet|outlet)"
    {
        type            calculated;
        value           $internalField;
    }
    "(front|back)"
    {
        type            symmetryPlane;
    }
}


