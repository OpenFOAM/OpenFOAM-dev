// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mover
{
    type            motionSolver;

    libs            ("libfvMotionSolvers.so");

    motionSolver    solidBody;

    cellZone        inletChannel;

    solidBodyMotionFunction  oscillatingLinearMotion;

    amplitude       (0 0.5 0);
    omega           3.14; // rad/s  (.5 rps)
}


