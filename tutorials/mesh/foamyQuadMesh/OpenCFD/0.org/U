FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (3 0 0);
    }

    outlet
    {
        type            zeroGradient;
    }

    bottom
    {
        type            supersonicFreestream;
        UInf            (3 0 0);
        pInf            1;
        TInf            1;
        gamma           1.4;
    }

    top
    {
        type            supersonicFreestream;
        UInf            (3 0 0);
        pInf            1;
        TInf            1;
        gamma           1.4;
    }

    letters
    {
        type            noSlip;
    }
}

