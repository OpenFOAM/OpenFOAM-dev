FoamFile
{
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     chtMultiRegionFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         20;

deltaT          0.01;

writeControl    adjustableRunTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  no;

maxCo           5;

maxDi           200;

maxDeltaT       1;

functions
{
    #includeFunc patchAverage
    (
        funcName=cylinderT,
        region=fluid,
        patch=fluid_to_solid,
        field=T
    )
    #includeFunc patchAverage
    (
        funcName=inletU,
        region=fluid,
        patch=inlet,
        field=U
    )
 }

}

