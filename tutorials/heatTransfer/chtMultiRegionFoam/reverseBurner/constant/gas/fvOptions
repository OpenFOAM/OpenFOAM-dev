FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

options
{
    energySource
    {
        type            semiImplicitSource;

        timeStart       0;
        duration        1;
        selectionMode   cellSet;
        cellSet         ignition;
        volumeMode      specific;

        sources
        {
            h
            {
                explicit    5e7; // kg/m/s^3
                implicit    0;
            }
        }
    }
}


