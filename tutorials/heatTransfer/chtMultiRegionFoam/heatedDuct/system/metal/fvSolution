solvers
{
    h
    {
        solver           GAMG;
        smoother         symGaussSeidel;
        tolerance        1e-6;
        relTol           0.1;
    }

    hFinal
    {
        $h;
        relTol           0;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
