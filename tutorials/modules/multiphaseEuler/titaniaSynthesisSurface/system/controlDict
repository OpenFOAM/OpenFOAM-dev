FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     foamRun;

solver          multiphaseEuler;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          1e-4;

writeControl    adjustableRunTime;

writeInterval   1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  9;

writeCompression off;

timeFormat      general;

timePrecision   8;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.8;

maxDeltaT       1e-3;

functions
{
    #includeFunc graphCell
    (
        funcName=graph,
        start=(0 0 1e-3),
        end=(0.44 0 1e-3),
        fields=(TiCl4.vapor O2.vapor Cl2.vapor alpha.particles)
    )

    #includeFunc populationBalanceSizeDistribution
    (
        populationBalance=aggregates,
        regionType=cellZone,
        name=outlet,
        functionType=numberDensity,
        coordinateType=projectedAreaDiameter,
        allCoordinates=yes,
        normalise=yes,
        logTransform=yes,
        funcName=numberDensity
    )

    #includeFunc writeObjects
    (
        d.particles,
        phaseTransfer:dmidtf.TiO2.particlesAndVapor,
        phaseTransfer:dmidtf.TiO2_s.particlesAndVapor
    )
}


