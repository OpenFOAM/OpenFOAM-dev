FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    D
    {
        solver          GAMG;
        smoother        GaussSeidel;

        tolerance       1e-10;
        relTol          0.99;

        nCellsInCoarsestLevel 6;
    }
}

PIMPLE
{
    compactNormalStress no;
    accelerationFactor  1.9; // Lower for higher Poisson ratio
}

