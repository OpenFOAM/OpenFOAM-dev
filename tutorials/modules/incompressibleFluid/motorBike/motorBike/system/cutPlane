cutPlane
{
    type            surfaces;
    libs            ("libsampling.so");
    writeControl    writeTime;

    surfaceFormat   vtk;
    writeFormat     binary;
    fields          (p U);

    interpolationScheme cellPoint;

    surfaces
    (
        yNormal
        {
            type            cutPlane;
            planeType       pointAndNormal;
            point           (0 0 0);
            normal          (0 1 0);
            interpolate     true;
        }
    );
}


