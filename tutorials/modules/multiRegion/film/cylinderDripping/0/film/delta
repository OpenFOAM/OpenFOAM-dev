FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/film";
    object      delta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform 2e-4;

boundaryField
{
    surface
    {
        type            zeroGradient;
    }

    wall
    {
        type            filmContactAngle;

        contactAngle
        {
            type            constant;
            theta0          70;
        }

        value           $internalField;
    }

    sides
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            zeroGradient;
    }
}

// ************************************************************************* //
