FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0/tube";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform (0 0 0);

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    lower
    {
        type            flowRateInletVelocity;
        massFlowRate    constant 0.05;
        profile         turbulentBL;
        value           $internalField;
    }
    upper
    {
        type            pressureInletOutletVelocity;
        value           $internalField;
    }
    wall
    {
        type            noSlip;
    }
}

// ************************************************************************* //
