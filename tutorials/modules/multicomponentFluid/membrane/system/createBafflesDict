FoamFile
{
    format      ascii;
    class       dictionary;
    object      createBafflesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

internalFacesOnly true;

baffles
{
    membrane
    {
        type        faceZone;
        zoneName    membrane;

        owner
        {
            name        membranePipe;
            type        mappedWall;
            sampleMode  nearestPatchFace;
            samplePatch membraneSleeve;
        }

        neighbour
        {
            name        membraneSleeve;
            type        mappedWall;
            sampleMode  nearestPatchFace;
            samplePatch membranePipe;
        }
    }
}


