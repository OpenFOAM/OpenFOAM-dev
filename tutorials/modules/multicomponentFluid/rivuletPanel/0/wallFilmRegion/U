FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0/wallFilmRegion";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    wallFilmFaces_top
    {
        type            slip;
    }

    region0_to_wallFilmRegion_wallFilmFaces
    {
        type            noSlip;
    }

    inlet
    {
        type            fixedValue;
        value           uniform (0 -0.075 0);
    }

    outlet
    {
        type            zeroGradient;
    }

    sides
    {
        type            noSlip;
    }
}


