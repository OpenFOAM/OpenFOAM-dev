FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/wallFilmRegion";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform  300;

boundaryField
{
    // top film surface
    "(.*top)"
    {
        type            zeroGradient;
    }

    // mapped boundaries
    "(region0_to.*)"
    {
//        type            zeroGradient;
        type            fixedValue;
        value           uniform 350.0;
    }

    // floor sides
    walls
    {
        type            zeroGradient;
    }
}

