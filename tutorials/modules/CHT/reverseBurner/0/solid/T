FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    external
    {
        type            externalTemperature;
        h               uniform 1e3;
        Ta              $internalField;
        value           $internalField;
    }

    solid_to_gas
    {
        type            coupledTemperature;
        value           $internalField;
        qrNbr           qr;
    }
}


