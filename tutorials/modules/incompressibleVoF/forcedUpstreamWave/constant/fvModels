FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

forcing
{
    type            waveForcing;

    libs            ("libwaves.so");

    liquidPhase     water;

    origin          (600 0 0);
    direction       (1 0 0);

    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    300;
    }

    lambda          0.5;
}

damping
{
    type            isotropicDamping;

    libs            ("libwaves.so");

    origin          (0 0 0);
    direction       (-1 0 0);

    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    600;
    }

    lambda          0.5;

    value           (2 0 0);
}


