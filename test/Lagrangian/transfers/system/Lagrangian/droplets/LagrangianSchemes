FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system/Lagrangian/droplets";
    object      LagrangianSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

tracking    linear;

ddtSchemes
{
    default     Euler;
}

SpSchemes
{
    default     none;
    Sp(D,U)     implicit;
    Sp(D,Uc)    explicit;
}

averagingSchemes
{
    default     none;
    alpha       cellPoint;
}

interpolationSchemes
{
    default     cell;
    Uc          cellPoint;
    alphac.air  cellPoint;
}

accumulationSchemes
{
    default     none;
    S(v)        cell;
    S(m)        cell;
    S(v*U)      cell;
    S(m*U)      cell;
}

