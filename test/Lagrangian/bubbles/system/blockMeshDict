FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.01;

vertices
(
    (-1 -1  0)
    ( 1 -1  0)
    ( 1  1  0)
    (-1  1  0)
    (-1 -1 50)
    ( 1 -1 50)
    ( 1  1 50)
    (-1  1 50)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (1 1 100) simpleGrading (1 1 1)
);

defaultPatch
{
    type empty;
}

boundary
(
    bottom
    {
        type wall;
        faces
        (
            (0 1 2 3)
        );
    }

    top
    {
        type wall;
        faces
        (
            (4 5 6 7)
        );
    }
);


